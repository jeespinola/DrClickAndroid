    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <!-- Main theme colors -->
        <!--   your app branding color for the app bar -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <!--   darker variant for the status bar and contextual app bars -->
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <!--   theme UI controls like checkboxes and text fields -->
        <item name="colorAccent">@color/colorAccent</item>

        <item name="android:windowBackground">@color/colorPrimaryDark</item>

        <item name="colorControlNormal">@color/iron</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="colorControlHighlight">@color/white</item>
        <item name="android:textColorHint">@color/iron</item>

        <item name="colorButtonNormal">@color/colorPrimaryDark</item>



    </style>


    <!-- This configures the styles for the title within the Toolbar  -->
    <style name="ContentTextToolbar">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
    </style>

    <style name="ContentTextTitulo">
        <item name="android:textSize">@dimen/title</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:lines">1</item>
    </style>

    <style name="ContentTextInicio">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>
    <style name="ContentTextInicio2">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/iron_dark</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
    </style>

    <style name="ContentTextDoctor">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/colorPrimary</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">2</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContentTextEspecialidad">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textSecondary</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContentTextHorario">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:lines">1</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContentCardProfile">
        <item name="android:textSize">@dimen/subtitle</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
        <item name="android:lines">1</item>
        <item name="android:gravity">center</item>
        <item name="android:ellipsize">end</item>
    </style>

    <style name="ContentTextForm">
        <item name="android:textSize">@dimen/font_normal</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>


    <style name="card_inicio">

        <item name="cardBackgroundColor">@color/colorPrimary</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>

    </style>

    <style name="card_inicio2">

        <item name="cardBackgroundColor">@color/darkRed</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <style name="card_inicio3">

        <item name="cardBackgroundColor">@color/iron</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <style name="card_facebook">

        <item name="cardBackgroundColor">@color/facebook_color</item>
        <item name="cardCornerRadius">@dimen/radius_card</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <style name="card_blanco">

        <item name="cardBackgroundColor">@color/white</item>
        <item name="android:elevation">@dimen/elevarion_card</item>
    </style>

    <!--Spots dialog-->
    <style name="spots" parent="android:Theme.DeviceDefault.Dialog">
        <item name="DialogTitleAppearance">@android:style/TextAppearance.Medium</item>
        <item name="DialogTitleText">@string/spot_title</item>
        <item name="DialogSpotColor">@color/colorAccent</item>
        <item name="android:background">@color/iron_ligth</item>
        <item name="android:textColor">@color/textPrimary</item>
        <item name="DialogSpotCount">4</item>
    </style>



</resources>
